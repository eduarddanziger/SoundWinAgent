    <PropertyGroup>
      <BaseDirectory>$(MSBuildThisFileDirectory)..\..\</BaseDirectory>
      <ArtifactsDirectory>$(BaseDirectory)artifacts\</ArtifactsDirectory>
      <ReleaseNotesFileName>SoundWinAgent-Release-Notes.md</ReleaseNotesFileName>
